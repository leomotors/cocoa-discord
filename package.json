{
  "name": "@cocoa-discord/turborepo",
  "private": true,
  "engines": {
    "node": "^24.11"
  },
  "packageManager": "pnpm@10.21.0",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types --continue",
    "dev": "turbo run dev",
    "lint": "turbo run lint --continue",
    "format": "turbo run format --continue",
    "test": "turbo run test --continue",
    "test:cov": "turbo run test:cov --continue",
    "music": "pnpm --filter=@cocoa-discord/music-module bot"
  },
  "devDependencies": {
    "@leomotors/config": "^1.0.1",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "turbo": "^2.6.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.8"
  },
  "pnpm": {
    "overrides": {
      "discord-api-types": "^0.38.31"
    }
  }
}
