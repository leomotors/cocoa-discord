{
  "name": "@cocoa-discord/music-module",
  "version": "3.0.0",
  "description": "discord.js music bot that can be run standalone or as a module for other bots",
  "main": "dist/index.js",
  "typings": "./dist/index.d.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/leomotors/cocoa-discord"
  },
  "author": "leomotors",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "pnpm lm-config && tsc",
    "lint": "eslint src",
    "format": "eslint src --fix",
    "test": "vitest run && node tests/index.js",
    "test:cov": "vitest run --coverage",
    "bot": "pnpm build && node tests/bot.js",
    "prepack": "rimraf dist/* && pnpm build && pnpm lint && pnpm test",
    "docs": "pnpm lm-config && typedoc"
  },
  "devDependencies": {
    "@discordjs/opus": "^0.10.0",
    "@leomotors/scripts": "^3.1.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.6",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "libsodium-wrappers": "^0.7.15",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  },
  "dependencies": {
    "@discordjs/voice": "^0.19.0",
    "@distube/ytdl-core": "^4.16.12",
    "chalk": "^5.6.2",
    "cocoa-discord": "workspace:^",
    "discord.js": "^14.24.2",
    "microsoft-cognitiveservices-speech-sdk": "^1.46.0",
    "play-dl": "^1.9.7",
    "tslib": "^2.8.1",
    "uuid": "^13.0.0"
  },
  "keywords": [
    "discord-bot",
    "music-bot",
    "discordjs",
    "cocoa-discord"
  ]
}
