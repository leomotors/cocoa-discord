{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "rootDirs": ["./src"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "experimentalDecorators": true,
    "noUncheckedIndexedAccess": true,
    "incremental": true,
    "importHelpers": true
  },
  "include": ["./src/**/*"]
}
