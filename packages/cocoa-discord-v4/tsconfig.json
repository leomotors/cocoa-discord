{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "rootDirs": ["./src"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "noUncheckedIndexedAccess": true
  },
  "include": ["./src/**/*", "define.d.ts"]
}
