{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build:app": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "cache": false
    },
    "format": {
      "cache": false
    },
    "docs": {
      "outputs": ["docs-dist/**"]
    },
    "test": {
      "cache": false
    },
    "test:cov": {
      "cache": false
    },
    "dev": {
      "cache": false
    }
  }
}
